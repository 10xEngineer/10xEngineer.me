.tabbar
  .tab
    display inline-block
    padding 4px
    border 1px solid #CCC
    border-radius 6px 6px 0 0
    margin-right -1px
    cursor default
    position relative
    user-select none
    .close_button
      float right
      width 9px
      height 9px
      line-height 7px
      color #CCC
      text-align center
      margin-top -1px
      margin-right -1px
      margin-left 5px
      border 1px solid #CCC
      border-radius 25px
    .close_button:active
      color rgb(50, 50, 50)
      border 1px solid rgb(50, 50, 50)
      box-shadow inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05)
    .loader
      background-image url('/img/ajax-loader.gif')
      background-size contain
      height 30px
      width 30px
      position absolute
      left 50%
      margin-left -15px
      top -2px
      display none
  .tab:hover
    .close_button
      border 1px solid rgb(100, 100, 100)
      color rgb(100, 100, 100)
  .tab:last-child
    margin-right 0px
  .tab.active
    box-shadow inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05)
  .tab.dirty
    .close_button
      background-color #CCC
  .tab.saving
    color #CCC
    .loader
      display block