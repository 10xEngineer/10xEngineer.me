.navbar.span12
	.navbar-inner
		.container
			a.btn.btn-navbar(data-toggle="collapse",data-target=".nav-collapse")
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.brand(href='/about', style='font-size:2em;') 
				span(style='color:white;font-weight:bold;') 10
				span(style='color:orange;') x
				span(style='color:white;') Engineer
				span(style='color:orange;font-weight:bold;') .
				span(style='color:white;') me
				// img(src='/img/10xengineer.me.png', alt='10xEngineer.me')
			ul.nav.nav-collapse
				li.active
					a(href='/')
						i.icon-home.icon-white 
						| Home
				li.dropdown
					a.dropdown-toggle(href='/courses', data-toggle='dropdown')
						i.icon-calendar.icon-white 
						| Courses
						b.caret
					ul.dropdown-menu
						li
							a(href='#') My Courses
						li.divider
						li
							a(href='#') Upcoming Courses
				li.dropdown
					a(href='http://10xEngineer.me:80')
						i.icon-map-marker.icon-white 
						| Forum
			//form.navbar-search.pull-right(action='')
			//	input.search-query.span3(type='text', placeholder='Search Contents')
			ul.nav.pull-right.nav-collapse
				-if(!everyauth.loggedIn)
					li
						a(href='/auth')
							i.icon-user.icon-white
							|  Sign In
				-if(everyauth.loggedIn)
					li
						a(href='/users/#{user.id}')
							- if(user.role == 'admin')
								i.icon-eye-open.icon-white
							- else
								i.icon-user.icon-white 
							|  #{everyauth.user.name} 
							- if(user.role == 'admin')
								| ( 
								strong(style='color:yellow') #{user.role}
								| )
					li
						a(href='/logout')
							i.icon-star-empty.icon-white
							|  Sign Out
