mixin header
  .header
    .right
    .left
      .navbar
        a.btn.btn-navbar(data-toggle="collapse",data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href='/') 
          span(style='color:rgb(99, 82, 82);font-weight:bold;') 10
          span(style='color:orange;') x
          span(style='color:rgb(99, 82, 82);') Engineer
          span(style='color:orange;font-weight:bold;')
            | .
          span(style='color:rgb(99, 82, 82);') me
          // img(src='/img/10xengineer.me.png', alt='10xEngineer.me')
        //form.navbar-search.pull-right(action='')
        //  input.search-query.span3(type='text', placeholder='Search Contents')
        ul.nav.pull-left.nav-collapse
          -if(!isLoggedIn)
            li
              a(href='/auth')
                i.icon-user.icon
                |  Sign In
          -if(isLoggedIn)
            li
              a(href='/user/profile')
                - if(isAdmin)
                  i.icon-eye-open.icon
                - else
                  i.icon-user.icon 
                |  #{user.name} 
            - if(isAdmin)
              li
                a(href="/admin") ( admin )
              
            li
              a(href='/logout')
                i.icon-star-empty.icon
                |  Sign Out