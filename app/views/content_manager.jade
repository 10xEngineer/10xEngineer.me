.container-fluid
	.row-fluid
		.span3
		.span6
			form(action="/file-upload", method='POST', enctype='multipart/form-data', name='course-uploader').form-inline.well
				input#course.input-large(name='course-file', type='file', placeholder='Course File')
				input.btn.btn-primary.btn-large(type='submit', style='margin-left: 1em;') Upload course
		.span3
	.row-fluid
		.span12
	.row-fluid
		.span3
		.span6
			#content.well
				- if (typeof contentfile != "undefined") 
					p #{contentfile}
		.span3

script(type='text/javascript')
	function init() {
		$('.dropdown-toggle').dropdown();
		if( $('.carousel') ) {
			$('.carousel').carousel({
				interval: 2000
			});
		}
		$(".collapse").collapse();

		$(".accordion-heading.click").click(function() {
			$(this).toggleClass('highlighted');
			alert('toggle: '+ this.href.text)
		});		
	}
