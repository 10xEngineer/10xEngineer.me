.container
  h1= title
  p
    a.btn.pull-right(href="/admin/usersImport") 
      i.icon-download-alt
      | Import User Email
  .admin_view_header
    a.btn(href="/admin/roles", style="margin-right: 5px;") Roles
    a.btn(href="/admin/labs", style="margin-right: 5px;") Labs 
    a.btn(href='/admin/clearProgress', id='#{user.id}', style="margin-right: 5px;") Clear Progress           
    a.btn(href="/admin/approve") Approve
    .counts.pull-right
      code(style="padding:10px;")  Total Users- #{users.length} 
  .actions 
    ul.admin_view_list_items
      each user in users
        li
          - if(user.name) 
            label(for='#{user.id}', style='display:inline') #{user.name} 
          - else
            label(for='#{user.id}', style='display:inline') #{user.email} 
          p(style="display:inline; margin-right: 5px;color:gray")  ( #{user.roles.join(', ')} )
          .roles.pull-right
            a.btn.btn-success(href="/admin/user/#{user.id}/roles", id='#{user.id}', style="margin-right:5px")
              i.icon-edit.icon-white
              |  Edit Roles
            a.btn.btn-danger(href="/admin/user/#{user.id}/remove")
              i.icon-trash.icon-white 
              |  Delete User