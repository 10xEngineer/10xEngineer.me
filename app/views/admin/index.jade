extends ../layout

block layout.body
  .container
    h1= title
    .row-fluid
      a.btn.pull-right(href="/admin/usersImport") 
        i.icon-download-alt
        | Import User Email
    .row-fluid
      .admin_view_header.spam10
        a.btn(href="/admin/roles") Roles
        a.btn(href="/admin/labs") Labs 
        a.btn(href="/admin/approve") Approve
        .counts.pull-right
          code(style="padding:10px;")  Total Users- #{users.length}

    .actions 
      ul.admin_view_list_items
        each user in users
          li
            - if(user.name) 
              a(href="/admin/user/#{user.id}/info")
                label(for='#{user.id}', style='display:inline') #{user.name} 
            - else
              a(href="admin/user/#{user.id}/info")
                label(for='#{user.id}', style='display:inline') #{user.email} 
            p(style="display:inline; margin-right: 5px;")  ( 
              each role,roleIndex in user.roles
                if(roleIndex != 0) 
                  | ,
                span(class='#{role}') #{role} 
              | )
            .roles.pull-right
              a.btn.btn-success(href="/admin/user/#{user.id}/roles", id='#{user.id}')
                i.icon-edit.icon-white
                |  Edit Roles
              a.confirmDeletion.btn.btn-danger(remove-path="/admin/user/#{user.id}/remove", data-toggle="modal", data-target="#myModal", confirm-msg="Are you sure you want to remove '#{user.name}' user?")
                i.icon-trash.icon-white 
                |  Delete User
  script(type='text/javascript')
    function init() {

      // code for confirm box - modal
      var myData;
      createModal();
      console.log($('#myModal'));
      $('#myModal').on('show', function(e){
        var data = bridge(false);
        setModalData(data);
      });
      var bridge = function(bool, data) {
        if(bool){
          myData = data;
        } else {
          return myData;
        }
      }
      $('.confirmDeletion').click(function(e){
        var self = $(this);
        var tmpData = {
          path: self.attr('remove-path'),
          body: self.attr('confirm-msg')
        }
        bridge(true, tmpData);
      });      


      var classes = [], colors = [];
      $('p span').each(function(index, item){
        var classInstance = $(item).attr('class');
        var index = $.inArray(classInstance, classes);
        if(index == -1){
          var color ='#' + Math.floor(Math.random()*16777215).toString(16);
          $(item).css("color", color);
          classes.push(classInstance);
          colors.push(color);
        }
        else {
          $(item).css("color", colors[index]);
        }
      });      
    }
