h1= title
.admin_view_header
  a.btn(href="/admin/roles") Roles
  .counts.pull-right
    label [Total - #{users.length}]
.actions 
  ul.admin_view_list_items
    each user in users
      li 
        label(for='#{user.id}', style='display:inline') #{user.name}
        .roles.pull-right
          p(style="display:inline; padding-right: 5px;") #{user.roles.join(', ')}
          a.btn(href='/admin/#{user.id}/roles', id='#{user.id}', style="display:inline") Edit