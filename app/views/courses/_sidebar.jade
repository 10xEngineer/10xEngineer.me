//=require bootstrap-tabs bootstrap-scrollspy
.row-fluid
		.sidebar.well
			ul.nav.nav-list( data-spy="scroll" )
				li.nav-header 
					i.icon-book
					| Course Content
				- var units = course.units || []
				each unit, i in units
					- if (!unit.lessons)
						li
							a(href='/courses/#{course._id}/#{i+1}/1') #{unit.title}
					- else
						li.nav-header 
							i.icon-chevron-down
							| #{unit.title}

						each lesson, j in unit.lessons
							li
								a(href='/courses/#{course._id}/#{i+1}/#{j+1}') #{lesson.title}
				
				li.divider
				li.nav-header 
						i.icon-pencil
						| Tool
					li
						a(href='/program/#{course._id}/1/1') 
							| Example IDE
					li
						a(href='/quiz/#{course._id}/1/2') 
							| Example QUIZ

