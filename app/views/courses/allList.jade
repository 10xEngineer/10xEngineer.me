extends ../layout

block layout.body
  .container
    ul.nav.nav-pills.courseMenu
      li
        a(href="/courses") Featured
      li.active
        a(href="/courses/all") Course Library
      li
        a(href="/user/profile") My Library
    
    .row-fluid
      div.flexslider
        ul.slides
          each courseObject,courseIndex in courses
            - if(courseObject.status == 'published' || isAdmin)
              li
                center
                  img.courseImage(src="#{courseObject.wallImage}")
                div.detailsLink
                  h1.courseTitle #{courseObject.title}
                  p #{courseObject.desc}
                  div.detailsLinkBtn
                    a.btn.btn-primary.pull-right(href="/course/#{courseObject.id}") Details
    .row-fluid
      .span12
    .carouselWrapper

  script(type="text/javascript")
    $(window).load(function() {
      $('.flexslider').flexslider({
        animation: "slide",
        directionNav: true,
        controlsContainer: ".flexslider-container"
      });
    });
