//- Course Admin index?

.container-fluid.course-index.inner-index
	.row-fluid
		p.actions.clearfix.span8
				a(href='/courses/create').btn.btn-large.btn-primary.pull-left Add Course
				a(href='/courses/import').btn.btn-large.btn-inverse.pull-right Import a course
	.row-fluid.style(height='400px')
		.span8
			.carousel#course-carousel.slide.hidden-phone
					ul.carousel-inner
						each course, code in courses
							li.item.ribbon-wrapper
								- if (registered_courses[course._id])
									.ribbon-wrapper-green
										.ribbon-green IN PROGRESS
								a(href='/courses/#{course._id}/1')
									img.responsive(src="#{course.image}", height='400px', width='100%')
								.carousel-caption
									h3 #{course.title}
									p Taught by Steve M.
									p
										a(href='/courses/#{course._id}/1')
											if ( course.enrolled || course.open )
												span.btn.btn-primary.btn-large GO TO YOUR COURSE
											else
												span.btn.btn-large LEARN MORE

					// carousel-nav
					a.carousel-control.left(href='#course-carousel', data-slide='prev') &lsaquo;
					a.carousel-control.right(href='#course-carousel', data-slide='next') &rsaquo;
		.span4
			aslide.course-list
				ul.nav.nav-tabs.nav-stacked
					each course, code in courses
						li.item
							a(href='/courses/#{course._id}/1')
								#{course.title}
	.row-fluid.span8
		a.button(href='#')
			i.icon-th-large 
			span  Grid
		span
		| 
		a.button(href='#')
			i.icon-retweet
			span  Carousel
	.row-fluid.span8
		h4 Categories
			ul.categories
			- each category in categories
				li 
					a(href='/courses/?category=#{category.name}').label.label-info #{category.name}
				li
					a(href='/courses/') All Courses

	script(type='text/javascript')
		function init() {
			$('.item').first().addClass("active");
			$('.carousel').carousel({ interval: 3000, pause:"hover"});
		}