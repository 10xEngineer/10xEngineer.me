section
	ul.nav.nav-tabs#info-tab
		li.active
			a(href="#comment",data-toggle="tab") 
				| INSTRUCTOR COMMENTS
		li
			a(href="#description", data-toggle="tab") 
				| COURSE DESCRIPTION
		li
			a(href="#material", data-toggle="tab") 
