.container
  h1= title
  h2 #{test.title}
  p #{test.desc}
  .row-fluid
    .spam10
      a.btn(href="/question/create/#{test.id}")
        i.icon-plus
        |  Add Question
      a.btn.pull-right(href="/question/import/#{test.id}") 
        i.icon-download-alt
        |  Import Questions

  .actions 
    ul.questionList
      each question in questions
        li
          .innerDiv
            label #{question.question} 
              - if(question.weightage == 1)
                span.label.label-success Easy
              - else if(question.weightage == 2)
                span.label.label-warning Modrate
              - else if(question.weightage == 3)
                span.label.label-important Hard
            .pull-right.actionBtns
              a.btn.btn-success(href="/question/#{question.id}/edit")
                i.icon-edit.icon-white
                |  Edit Question
              a.btn.btn-danger(href="/question/#{question.id}/remove")
                i.icon-trash.icon-white 
                |  Delete Question
          ul
            each opt in question.choices
              li #{opt}